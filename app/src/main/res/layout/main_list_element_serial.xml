<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Title"
				android:id="@+id/title" android:textColor="#ff0303" android:textSize="18sp" />
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Watched"
				android:id="@+id/watchedEpisodes" android:textSize="14sp" android:textColor="#90fb15" />
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="New"
				android:id="@+id/newEpisodes" android:textColor="#e10c3e" android:textSize="14sp" />
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Last Date"
				android:id="@+id/lastDate" android:textSize="12sp" android:textColor="#d9460c" />
	</LinearLayout>
</LinearLayout>