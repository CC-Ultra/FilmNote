		<item name="android:dropDownListViewStyle">@style/DropdownListView_mentor</item>
	</style>

	<style name="Button_mentor" parent="button_style_basic">
		<item name="android:textColor">@color/light_text_mentor</item>
		<item name="android:background">@drawable/buton_selector_mentor</item>
	</style>
	<style name="Button_menu_mentor" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:src">@drawable/menu_button_mentor</item>
	</style>
	<style name="EditText_mentor" parent="BasicEditText">
		<item name="android:textColor">@color/dark_text_mentor</item>
		<item name="android:textColorHighlight">@color/selection_ultra</item>
		<item name="android:background">@drawable/edit_text_selector_mentor</item>
		<item name="android:textCursorDrawable">@drawable/edit_text_cursor_selector_mentor</item>
	</style>
	<style name="DropdownListView_mentor" parent="BasicDropdownListView">
		<item name="android:background">@color/list_background_mentor</item>
		<item name="android:divider">@color/list_divider_mentor</item>
		<item name="android:listSelector">@drawable/dropdown_selector_mentor</item>
	</style>

