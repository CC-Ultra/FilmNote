<resources>

<!--mentor-->
	<style name="Theme_Mentor" parent="BasicTheme">
		<item name="colorPrimary">@color/panel_mentor</item>
		<item name="android:layout">@color/panel_mentor</item>
		<item name="android:textColor">@color/dark_text_mentor</item>
		<item name="android:buttonStyle">@style/Button_mentor</item>
